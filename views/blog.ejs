<%- include('./modules/head.ejs') %>
<%- include('./modules/nav.ejs') %>
    
<div class="container blogs--box">

    <div class="nav-wrapper">
        <form action="" method="GET" class="search--blog">
            <div class="input-field">
                <input id="search" type="search" required>
                <label class="label-icon" for="search"><i class="material-icons">search</i></label>
                <i class="material-icons">close</i>
            </div>
        </form>
    </div>

    <div class="row">

        <% if(blogs.length > 0) { %> 

            <% blogs.forEach(blog => { %> 
            
                <div class="col s12 l6">
                    <div class="card card--blog">
                        <div class="card-content">
                            <span class="card-title"><%= blog.blogTitle %></span>
                            <span class="card--date"><%= blog.createdAt.toLocaleDateString() %></span>
                            <p>
                                <%= blog.snippet %> 
                            </p>
                        </div>
                        <div class="card-action">
                            <a href="blogs/<%= blog.slug %>" class="blue-text lighten-2">Czytaj dalej</a>
                        </div>
                    </div>
                </div>

            <% }); %> 

        <% } else { %> 
            <h1 class="center-align no--blogs">Na razie nie znajdują się tu żadne blogi :/</h1>
        <% } %> 
        
    </div>
</div>

<%- include('./modules/footer.ejs') %>